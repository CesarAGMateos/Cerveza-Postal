naranja = #d14728
naranjaObscuro = #a63820
gris_texto = #7A7A7A
gris_oscuro = #444
@font-face {
    font-family: 'the cinthia';
    src: url('../fonts/thecinthiaedito-webfont.eot');
    src: url('../fonts/thecinthiaedito-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/thecinthiaedito-webfont.woff2') format('woff2'),
         url('../fonts/thecinthiaedito-webfont.woff') format('woff'),
         url('../fonts/thecinthiaedito-webfont.ttf') format('truetype'),
         url('../fonts/thecinthiaedito-webfont.svg#the_cinthia_editoregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

body 
	font-family 'Open Sans', sans-serif
	font-weight 400 

header
	background url("../img/beer.jpg")
	background-position center center
	background-repeat no-repeat
	background-attachment fixed
	background-size cover
	padding .5em 0 6em 0
	color white
	
	.logo
		max-width 150px
		
		img
			width 100%
				
	nav
		margin-top 20px
		width 60%
		float right
		background naranja
		border-radius 5px
		padding 10px
		border-bottom 3px solid naranjaObscuro
		ul
			margin 0
			padding 0
			text-align center
			li
				border-left 1px solid naranjaObscuro
				display inline-block
				height 100%
				
				&:first-child
					border-left none

				a
					height 100%
					color white
					font-size 18px
					font-weight 300
					margin 0 0.5em
					padding 0 0.2em
					text-decoration none
					transition all .5s
					&:hover
						text-decoration none
						color #0d2230
	
	.mobile-menu
		background naranja
		border-bottom 3px solid naranjaObscuro
		border-radius 5px
		color white
		font-size 18px
		float right
		margin 20px 0
		padding 5px 10px
												
	.titular
		padding 2em 0
		text-align center
		text-shadow 0 0 10px rgba(0,0,0,1)
		h1
			font-family "the cinthia"
			font-size 85px
			margin 0
			padding 0
		
.enganche
	.titular
		margin-top 50px
		text-align center
		margin-bottom 2.5em
		
		h2 
			color #0d2230
			font-size 38px
			font-weight 700
			
		h5 
			font-size 18px
			line-height 130%
	.posts
		text-align center
		padding 3em
		margin-bottom 3em
	.figregistro
		margin-top 2.5em

		img
			

		
.fondo
	background-image url("../img/fondo-formilario.jpg")
	background-position center center
	background-repeat no-repeat
	background-size cover
	padding .5em 0 6em 0
	color white
	text-align center
	.consumidor
		h2
			font-family "the cinthia"
			font-size 65px
		h5
			margin 0
			margin-bottom 15px
			padding 0
			font-size 18px
			strong
				color naranja
		label
			display block
			font-size 17px
			margin 0
			margin-top 10px

		.formField
			color black
			width 220px
		.submit
			display block
			margin 20px auto
			background naranja
			border-radius 5px
			padding 10px
			border none
			border-bottom 3px solid naranjaObscuro
			outline none
.registro
	text-align center
	h2
		font-family "the cinthia"
		font-size 70px
		margin-top 1.2em 
		padding 0

	h3
		padding 0 
		margin-top -.5em
		
		span
			font-family "the cinthia"
			font-size 40px
			letter-spacing 2px
	
		
footer
	background #0d2230
	color white
	text-align center
	padding 2em 0
#fb
	margin-bottom 2em

@media (max-width:1199px)
	header
		nav
			width 90%

@media (max-width:767px)
	header
		nav
			margin-top 0
			position absolute
			top 60px
			right 60px
			width 100%
			z-index 100
			
			ul 
				li 
					border-left none 
					border-bottom 1px solid naranjaObscuro
					width 100%
					
					&:last-child 
						border-bottom none
	